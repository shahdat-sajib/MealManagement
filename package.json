{
  "name": "meal-management",
  "version": "1.0.0",
  "description": "Meal & Expense Management Web Application",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "cd server && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "echo 'No build needed for Railway - Server only deployment'",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "deploy": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/meal-management.git"
  },
  "keywords": ["mern", "meal", "expense", "management", "react", "node"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}